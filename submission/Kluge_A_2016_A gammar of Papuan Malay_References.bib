@incollection{Klamer.2008,
 abstract = {In this paper we consider how Eastern Indonesia may be treated as a linguistic area. We propose five defining linguistic features and we discuss their occurrence in some 40 Austronesian (AN) and non-Austronesian (NAN) languages of South Sulawesi, Flores, Sumba, Timor, Alor and Pantar, the Moluccas, Halmahera, the Bird{\grq}s Head, and the Cenderawasih Bay. We propose that of these five areal features, three are Papuan features that have diffused into the Austronesian languages, while two Austronesian features have diffused into the Papuan languages. These Papuan features are: (1) possessor-possessum order in adnominal possession, (2) overt marking of the distinction alienable vs. inalienable possession, and (3) clause-final negation. While these features are not generally found in Austronesian, we will demonstrate that they occur in many Austronesian languages in East Nusantara and around the Bird{\grq}s Head, as well as in the Papuan languages of this area The Austronesian features are: (4) SVO as primary constituent order, and (5) an inclusive/exclusive opposition in the pronominal paradigm. These features are not found in Papuan languages in general, yet they are attested in both the Papuan and the Austronesian languages of East Nusantara, as we will demonstrate. Although the features do not all converge on the same isoglosses, together they define a linguistic area: East Nusantara. This area has Halmahera and the Bird{\grq}s Head as its core, and radiates outwards to include the Moluccas and AlorIPantar first, followed by the island Timor.},
 author = {Klamer, Marian and Reesink, Gerard P. and {van Staden}, Miriam},
 title = {East Nusantara as a linguistic area},
 keywords = {areal language assessment;Eastern Indonesia;linguistic areas;linguistics;Sprachbund},
 pages = {95--151},
 volume = {90},
 publisher = {{John Benjamins Publishing Company}},
 isbn = {978-90-272-3100-0},
 series = {Studies in Language Companion Series},
 editor = {Muysken, Pieter},
 booktitle = {From linguistic areas to areal linguistics},
 year = {2008},
 address = {Amsterdam}
}


@inproceedings{Klamer.2013,
 abstract = {In the variety of Malay used by heritage speakers living in the Netherlands the expression of `give'-events varies considerably, and differs in interesting ways from the language it derived from. The majority of Malay heritage speakers grew up as simultaneous or early bilinguals and although Malay was often the language spoken at home , heritage speakers have Dutch as their dominant language. The language that was their input when they were children is the Malay variety spoken by the first generation, who originate from Ambon, Central Moluccas, and immigrated  to the Netherlands some 60 years ago in 1951-1952 (Tahitu 1989).

	A set of `give' expressions was elicited through visual stimuli: two video clips showing a person handing over something to another person (a pair of shoes, or a bag). Three groups of participants were asked to describe what they saw on the clip: (i) heritage speakers, (ii) first-generation speakers, and (iii) native speakers. Data from the first two groups was collected in the Netherlands (2011-2012), data from the Native speakers was collected in Ambon City in Indonesia in 2012.

	For the two clips there are responses by 28 heritage speakers, 18 native speakers, and 4 First generation speakers. We combined the group of Native speakers with the First generation speakers into one group of speakers that we refer to as `Baseline'  speakers here, as we assume that these speakers represent the variety of Malay from which Heritage Malay has derived. Both data sets thus had 22 Baseline responses.

	Malay `give' events are expressed with minimally one verb, the verb kasi `give'. Three arguments are part of this event: an Agent-like argument (A), a Recipient-like argument (R), and a Theme argument (T) (cf. Malchukov et. al. 2010:1). In this paper we first describe how Malay heritage speakers express give-constructions (section 2), focusing on the question how the Heritage speakers differ from the Baseline speakers (section 3). We will see that there is significant variation in how both sets of speakers encode the event and its participants T and R, and we attempt to explain this variation in section 4. A summary of the main conclusions is provided in section 5.},
 author = {Klamer, Marian and Moro, Francesca Romana},
 title = {`Give'-constructions in Heritage and Baseline Malay},
 keywords = {Ambon Malay;'give' constructions;grammar;heritage languages;linguistics;Malays;syntax},
 booktitle = {Workshop Structural Change in Heritage Languages},
 year = {2013}
}


