@article{Kiyomi.2009,
 abstract = {Reduplication has generally been believed to be iconically motivated, though it has been noted that it can be used to express diminution and other types of meanings that cannot be accounted for in terms of iconicity alone. I claim that reduplication can be regarded as being both iconic and noniconic. There are two different iconic processes: a consecutive process and a cumulative process. In the consecutive process, PLURALITY in nouns and REPETITION/CONTINUATION in verbs are regarded as the prototypical meanings. In the cumulative process, INTENSITY is considered the prototypical meaning in both nouns and verbs. Through the noniconic process, on the other hand, reduplication obtains various meanings, among which DIMINUTION is the most frequent. Furthermore, it plays a significant role as an intracategory changer and a word-class changer. While there are iconic and noniconic processes, the prototypical meanings brought about by both processes represent the semantic principle {\dq}A HIGHER/LOWER DEGREE OF ....{\dq} Since this does not imply that noniconic processes are really iconic, it is proposed that the iconic nature and the semantic principle of reduplication should be given separate consideration. A variety of meanings brought about by noun and verb reduplication in the Malayo-Polynesian languages are explored based on this classification.},
 author = {Kiyomi, Setsuku},
 year = {2009},
 title = {A new approach to reduplication: A semantic study of noun and verb reduplication in the Malayo-Polynesian languages},
 url = {http://dx.doi.org/10.1515/ling.1995.33.6.1145},
 keywords = {grammar;linguistics;Malayo-Polynesian languages;morphology;noun reduplication;reduplication;semantics;verb reduplication},
